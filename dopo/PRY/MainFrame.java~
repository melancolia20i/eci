 * Write a description of class MainFrame here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */

import javax.swing.*;
import java.awt.*;

public class MainFrame extends JFrame
{
	private CardLayout card;
	private JPanel panel;

	public MainFrame (String title, int width, int height, int nopages)
	{
		super(title);
		card = new CardLayout();
		panel = new JPanel(card);


		for (int i = 0; i < nopages; i++)
		{
			Canva page = new Canva("title", width, height, Colors.SAND.getColor());
			panel.add(page, "page" + i);
		}

		add(panel, BorderLayout.CENTER);

		JProgressBar pbar = new JProgressBar(0, 100);
		add(pbar, BorderLayout.SOUTH);

		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		pack();
		setVisible(true);
	}

	public void showPage (int index)
	{
		card.show(panel, "page" + index);
	}
}
