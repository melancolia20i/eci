def GFG(grid, N):
    mod = 1000000007
    dp = []

    for i in range(N):
        ceros = []
        for j in range(N):
            ceros.append(0)
        dp.append(ceros)

    for i in range(N):
        if grid[i][0] == '*':
            break
        dp[i][0] = 1

    for j in range(N):
        if grid[0][j] == '*':
            break
        dp[0][j] = 1

    for i in range(1, N):
        for j in range(1, N):
            if grid[i][j] == '*':
                continue
            dp[i][j] = (dp[i - 1][j] + dp[i][j - 1]) % mod
    return dp[N - 1][N - 1]

N = 4
grid = ["....", ".*..", "...*", "*..."]
print(GFG(grid, N))
